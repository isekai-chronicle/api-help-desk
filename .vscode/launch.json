{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "coreclr",
      "request": "launch",
      "name": "Launch ASP.NET Core (api-help-desk)",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/api-help-desk/bin/Debug/net9.0/api-help-desk.dll",
      "args": [],
      "cwd": "${workspaceFolder}/api-help-desk",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(http?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "launchBrowser": {
        "enabled": true,
        "args": "http://localhost:5002/swagger",
        "windows": {
          "command": "cmd.exe",
          "args": "/C start http://localhost:5002/swagger"
        },
        "osx": {
          "command": "open"
        },
        "linux": {
          "command": "xdg-open"
        }
      }
    }
  ]
}